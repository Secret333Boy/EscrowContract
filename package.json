{
  "name": "eth-training",
  "scripts": {
    "start": "yarn compile && yarn eth-node && yarn deploy:local",
    "compile": "hardhat compile",
    "prepare": "husky install",
    "start:remix": "open https://remix.ethereum.org/#optimize=false&runs=200&evmVersion=null&version=soljson-v0.8.7+commit.e28d00a7.js && npx remixd -s . -u https://remix.ethereum.org",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:local": "yarn deploy --network localhost",
    "deploy:hardhat": "yarn deploy --network hardhat",
    "deploy:rinkeby": "yarn deploy --network rinkeby",
    "deploy:ropsten": "yarn deploy --network ropsten",
    "test": "yarn lint:fix && hardhat test --trace",
    "typechain": "hardhat typechain",
    "test:gas": "export REPORT_GAS=true && yarn test",
    "test:coverage": "hardhat coverage && open ./coverage/index.html",
    "eth-node": "hardhat node",
    "lint": "eslint --ignore-path .gitignore . && prettier -c --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore . && prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@remix-project/remixd": "^0.6.6",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.7",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-gas-reporter": "^1.0.6",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "*"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@openzeppelin/contracts": "^4.6.0",
    "@types/jest": "^27.4.1",
    "erc721a": "^3.2.0",
    "hardhat": "^2.10.2",
    "hardhat-tracer": "^1.1.0-rc.6",
    "web3": "^1.6.1"
  }
}
